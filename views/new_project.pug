extends layout

block content
  .contenido-principal 
    h1 #{namePage}

    if errors
      each error in errors
        .alerta #{error.text}

    form.agregar-proyecto(action="/new_project", method="POST")
      .campo 
        label(for="name") Project name:
        input(type="text" id="name" name="name" placeholder="Project name")
      .campo.enviar
        input(type="submit" value="Create" class="boton")