doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="/css/normalize.css")
    link(rel="stylesheet", href="/css/app.css")
    title #{namePage}
  body 
    hader.barra
      h1 ProjectsApp - Manage your projects
      a(href='#') Logout 

    main.contenedor
      aside.contenedor-proyectos 
        .panel.crear-proyecto 
          a(href='/new_project' class='boton') New project
            span +
        .panel.lista-proyectos
          ul#proyectos.proyectos 
            if(projects)
              each project in projects
                li 
                  a(href=`/projects/${project.url}`)= project.name

      block content

