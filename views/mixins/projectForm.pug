mixin projectForm(project={})
  form.agregar-proyecto(action=`${project.id ? `/projects/${project.id}/update` : '/new_project'}`, method="POST")
    .campo 
      label(for="name") Project name: 
      input(value=project.name type="text" id="name" name="name" placeholder="Project name")
    .campo.enviar
      input( type="submit" value=`${project.name ? 'Save' : 'Create' }` class="boton")